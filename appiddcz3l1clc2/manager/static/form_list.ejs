 <div id="grid"></div>

<script>
 $(function () {
	 			var customers;
                var DataHost = window.DataHost,
                    dataSource = new kendo.data.DataSource({
                    	type: "json",
                        serverPaging: true,
                        serverSorting: true,
                        batch: true,
                        pageSize: 20,
                        serverFiltering:true,
                        transport: {
                            read:  {
                                url: DataHost + "/manger/form/read",
                                type: "post"
                            },
                            update: {
                                url: DataHost + "/manger/form/update",
                                type: "post"
                            },
                             create: {
                                url: DataHost + "/manger/form/create",
                                type: "post"
                            },
                            destroy: {
                                url:DataHost + "/manger/form/destroy",
                                type: "post"
                            }
                        },
                        schema: {
                        	total: "Total",
                           	data: "Data",
                           	parse:function(d){
                           		if(d && Array.isArray(d.Data)){
                           			d.Data = d.Data.map(function(v){
                           				v.formData = JSON.stringify(v.formData)
                           				return v;
                           			})
                           		}
                           		else if(d){
                           			d.formData = JSON.stringify(d.formData)
                           		}	
                           		return d;
                           	},
                            model: {
                        	    id:"_id",
                                fields: {
                                    "_id": { editable: false },
                                    "clientId": { editable: true, validation: { required: true}},
                                    "userId":{editable: true,validation: { required: true} },
                                    "formName":{editable: true,validation: { required: true} },
                                    "formData":{editable: true,validation: { required: true} },
									"writeTime":{ editable: true,type: "date" },
                                }
                            }
                        }
                    });

                $("#grid").kendoGrid({
                    dataSource: dataSource,
                    navigatable: true,
                    pageable: true,
                    height: 2000,
                    toolbar: ["create"],
                    columns: [
                        { 
							field: "_id",
							title: "表单id", 
						},
						{ 
							field: "clientId",
							title: "商业用户", 
						},
						{ 
							field: "userId",
							title: "用户Id", 
						},
						{ 
							field: "formName",
							title: "表单名称" 
						},
						{ 
							field: "formData",
							title: "表单内容" 
						},					
						{ 
							field: "writeTime",
							title: "写入时间",
						},
						{ command: ["edit", "destroy"], title: "&nbsp;", width: "160px" }],
                    editable: "popup",
                    filterable:true,
                    save:function(e){
                    	//e.model.formData = customers.value().toString();
                    },
                    edit:function(e){
	                    	
	                    	$.post(DataHost + '/manger/client/read', {skip:0, pageSize:1000}, function(d){
	                    		var d = d.Data;
	                    		d.unshift({"_id":"","desc":"选择商业用户"})
		                    	$('input[name="clientId"]').kendoDropDownList({
			                        dataTextField: "desc",
			                        dataValueField: "_id",
			                        dataSource: d
		                    	});
		                    }, 'json');
		                    		                    
	                    }		
                });
									
});

</script>


