<li id="ShowMemberType" class="card_box card01 clearfix">
  <div class="card_pic">
    <p class="login_pic01">
      <img id="MemberPic" src="/static/default_face.jpg">
    </p>
  </div>
  <div class="card_sn">
    <p class="clear"></p>
    <p class="f12">
      证件号码：<span class="f14"><%= cardNum %></span>
      会员姓名：<span class="f14"><%= userObj.appUserName %></span>
    </p>
