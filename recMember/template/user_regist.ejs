<% include inc/top %>

<section class="page-content container content-index">
    <h1 class="icon">会员中心</h1>

      <fieldset class="info">

<% if(binderObj.isNewSubmit == 1){ %>
<div class="info-errtip info-errtip2">
    资料审核中，请耐心等待
</div>
<%
}else if(binderObj.isNewSubmit == 2){ 
%>
<div class="info-errtip info-errtip2">
